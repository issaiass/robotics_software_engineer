<?xml version="1.0" ?>
<robot name="goofybot">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>


  
  <!-- ARM -->  

  <!--BASE FOOTPRINT -->
  <link name="base_footprint"></link>

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.0375"/>    
      <geometry>
        <cylinder radius="0.15" length="0.075"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <!-- FINGER LINK -->
  <link name="finger_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>        
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="white"/>
    </visual>  
  </link>

  <!-- EE LINK -->
  <link name="ee_link">
  </link>    

  <link name="gripper_base">
  </link>

  <link name="gripper_extension">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 -0.25"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="white"/>
    </visual>  
  </link>  


  <joint name="base_joint" type="continuous">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="finger_link"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.707" upper="0.707" effort="100" velocity="1.0"/>
  </joint>

  <joint name="ee_joint" type="revolute">
    <parent link="finger_link"/>
    <child link="ee_link"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>
  
  <link name="gripper_tip_ee_right">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>    
  </link>

  <link name="gripper_tip_base">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <material name="blue"/>
    </visual>    
  </link>

  <link name="gripper_tip_ee_center">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>      
  </link>   


  <link name="gripper_tip_ee_left">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
        <box size="0.02 0.02 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>  
  </link>   

  <!-- END ARM -->



  <!-- GRIPPER -->

  <joint name="" type="fixed">
    <parent link="ee_link"/>
    <child link="gripper_base"/>
  </joint>



  <joint name="gripper_extension_joint" type="prismatic">
    <parent link="gripper_base"/>
    <child link="gripper_extension"/>
    <axis xyz="0 0 1"/>    
    <limit effort="1000.0" lower="0.5" upper="0" velocity="0.5"/>
  </joint>


  

  <joint name="gripper_tip_base_joint" type="fixed">
    <parent link="gripper_extension"/>
    <child link="gripper_tip_base"/>
    <origin rpy="0 0 0" xyz="0 0 0.0"/>    
  </joint>




  <joint name="gripper_tip_ee_right_joint" type="revolute">
    <parent link="gripper_tip_base"/>
    <child link="gripper_tip_ee_right"/>
    <origin xyz="0.025981 0.0015 0" rpy="0 0 2.09436"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.7853" upper="-0.08" effort="100" velocity="1.0"/>
  </joint>

  <joint name="gripper_tip_ee_center_joint" type="revolute">
    <mimic joint="gripper_tip_ee_right_joint" multiplier="1" offset="0"/>    
    <parent link="gripper_tip_base"/>
    <child link="gripper_tip_ee_center"/>
    <origin xyz="0 -0.03 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.7853" upper="-0.08" effort="100" velocity="1.0"/>
  </joint>


  <joint name="gripper_tip_ee_left_joint" type="revolute">
    <mimic joint="gripper_tip_ee_right_joint" multiplier="1" offset="0"/>      
    <parent link="gripper_tip_base"/>
    <child link="gripper_tip_ee_left"/>
    <origin xyz="-0.025981 0.0015 0" rpy="0 0 -2.09436"/>
    <axis xyz="1 0 0"/>
    <limit lower="0.7853" upper="-0.08" effort="100" velocity="1.0"/>
  </joint>


</robot>